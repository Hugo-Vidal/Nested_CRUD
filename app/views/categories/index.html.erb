<p id="notice"><%= notice %></p>

<h1 class="mb-3">Categories</h1>

<table class="table">
  <thead class="thead-light">
    <tr class="text-center">
      <th scope="col">Name</th>
      <th scope="col">Cantidad</th>
      <th scope="col">Editar</th>
      <th scope="col">Destruir</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr class="text-center">
        <td><%= link_to category.name, category %></td>
        <td><%= category.products.count%></td>
        <td><%= link_to 'Editar', edit_category_path(category), class:"btn btn-info" %></td>
        <td><%= link_to 'Destruir', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class:"btn btn-primary text-white" %>
