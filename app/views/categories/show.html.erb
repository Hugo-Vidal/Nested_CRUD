<p id="notice"><%= notice %></p>

<h1 class="mb-4"> Categor√≠a: <%= @category.name %></h1>

<table class="table text-center">
  <thead class="thead-light">
    <tr>
      <th scope="col">Nombres</th>
      <th scope="col">Precios</th>
      <th scope="col">Eliminar</th>
    </tr>
  </thead>
  <tbody>
      <% @category.products.each do |product| %>
      <tr>
        <td class="mb-2">
          <%= product.name %> 
        </td>
        <td class="mb-2">
          <%= product.price %> 
        </td>
        <td class="mb-2">
          <%= link_to "Eliminar", category_product_path(@category, product), method: :delete, class:"btn btn-warning btn-sm" %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>

<h3> Nuevo Producto </h3>
<%= form_with(model: [@category, Product.new], local: true) do |form| %>
  <%= form.hidden_field :category_id, value: @category.id %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

    <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit 'Crear Producto', class: 'btn btn-primary btn-sm'%>
  </div>
<% end %>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
